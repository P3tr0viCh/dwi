<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ru.p3tr0vich.dwi.DatePreference
        app:icon="@drawable/ic_datetime_24"
        app:key="@string/pref_datetime_key"
        app:title="@string/pref_datetime_title" />

    <ListPreference
        android:defaultValue="system"
        android:icon="@drawable/ic_app_theme_24"
        app:entries="@array/pref_app_theme_entries"
        app:entryValues="@array/pref_app_theme_values"
        app:key="@string/pref_app_theme_key"
        app:title="@string/pref_app_theme_title"
        app:useSimpleSummaryProvider="true" />
</PreferenceScreen>